doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/daisyui@4.12.2/dist/full.min.css", rel="stylesheet", type="text/css")
    script(src="https://cdn.tailwindcss.com")
    title Login Mahasiswa
    style.
      .bg-custom
        background-color: #16105B;
  body
    .hero.min-h-screen.bg-base-200
      .hero-content(class=["flex-col", "lg:flex-row-reverse"])
        .text-center(class=["lg:text-center"])
          h1.text-5xl.font-bold Login
          p.py-6 EDUSKOR : HASIL PENILAIAN BELAJAR MAHASISWA
        .card.shrink-0.w-full.max-w-sm.shadow-2xl.bg-base-100
          form.card-body(action="/mahasiswa/dashboard", method="GET")
            .form-control
              label.label
                span.label-text Email
              input(type="email", placeholder="email", class="input input-bordered", required)
            .form-control
              label.label
                span.label-text Password
              input(type="password", placeholder="password", class="input input-bordered", required)
            .form-control.mt-6
              button.btn.btn-primary(type="submit") Login
